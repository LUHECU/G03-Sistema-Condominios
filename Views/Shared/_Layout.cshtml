<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="https://code.jquery.com/ui/1.14.0/themes/base/jquery-ui.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        if (Session["UserId"] != null)
        {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">


                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Session["UserTipo"].Equals("Cliente"))
                        {
                            <li>@Html.ActionLink("Mis cobros", "Index", "Cobro", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else 
                        { 
                            <li>@Html.ActionLink("Gestionar cobros", "Index", "Cobro", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        

                        @if (!Session["UserTipo"].Equals("Cliente"))
                        {
                            <li>@Html.ActionLink("Casas", "Index", "Casas", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Servicios", "Index", "Servicios", new { area = "" }, new { @class = "nav-link" })</li>
                        }

                    </ul>

                    <ul class="navbar-nav ">
                        <li>
                            <label class="nav-link">@Html.Raw(Session["UserName"])</label>
                        </li>
                        <li>
                            @Html.ActionLink("Cerrar Sesión", "Logout", "Login", new { }, new { @class = "btn btn-light btn-outline-black" })
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
        }
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"
            integrity="sha256-u0L8aA6Ev3bY2HI4y0CAyr9H8FRWgX4hZ9+K7C2nzdc="
            crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
