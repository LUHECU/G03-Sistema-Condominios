@model G03_Sistema_Condominios.Models.LoginCobros

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3>@Html.Raw(Session["UserName"])</h3>

<div>
    <div class="my-4">
        @Html.ActionLink("Nuevo cobro", "CrearModificarCobro", "Cobro", new { }, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-hover table-bordered">
        <tr class="text-center">
            <th># Cobro</th>
            <th># Casa</th>
            <th># Propietario</th>
            <th>Periodo</th>
            <th>Estado</th>
        </tr>
        @{
            foreach (var co in this.Model)
            {
                <tr class="text-center">
                    <td>@co.Id_cobro</td>
                    <td>@co.Nombre_casa</td>
                    <td>@co.Persona</td>
                    <td>@co.Mes - @co.Anno</td>
                    <td>@co.Estado</td>
                </tr>
            }
        }
    </table>
</div>